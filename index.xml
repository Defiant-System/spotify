<Application>
	<Head>
		<meta name="id" value="spotify"/>
		<meta name="title" value="Spotify" version="1.2"/>
		<meta name="author" value="Hakan Bilgin" namespace="ant"/>
		<meta name="license" value="AGPL-3.0"/>
		<meta name="repository" value="https://github.com/Defiant-System/spotify"/>
		<meta name="width" value="920" min="660"/>
		<meta name="height" value="620" min="500"/>
		<meta name="top" value="80"/>
		<meta name="left" value="150"/>
		<meta name="headless" value="true" theme="dark"/>
		<meta name="minimize"/>
		<meta name="maximize"/>
		<meta name="resize"/>
		<meta name="oauth" value="oauth-credentials.json"/>
		<meta name="icons" value="src/svg/icons.svg"/>
		<meta name="script" value="src/js/main.js"/>
		<meta name="style" value="src/css/main.less"/>
		<meta name="content" value="src/partials/content.htm"/>
		<meta name="xsl" value="src/partials/templates.xsl"/>
		<meta name="requires">
			<entry id="oauth" description="'oauth-credentials.json' is required for Spotify API."/>
		</meta>

		@import "src/partials/menubar.xml"
	</Head>

	@import "src/partials/data.xml"
</Application>